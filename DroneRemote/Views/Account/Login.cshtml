@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
    ViewBag.hideNavbar = true;
}

<link rel="stylesheet" href="~/css/login.css" />
<div class="row">
    <div class="absolute-center is-responsive">
        <div class="col-sm-12 col-md-10 col-md-offset-1">
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <div id="logo-container"></div>
                <div asp-validation-summary="All" class="text-white"></div>
                <div class="form-group input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "email" })
                </div>
                <div class="form-group input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "password" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-def btn-block" onclick="document.getElementById('loader').style.display = 'block';">Login</button>
                </div>
                @*<a asp-action="ForgotPassword" style="color:#fff; margin-top:10px; margin-bottom:15px;">Forgot your password?</a>*@
            </form>
            <div id="loader" class="loader-login" style="display:none" />
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
